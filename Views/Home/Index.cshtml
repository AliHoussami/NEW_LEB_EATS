@{
    ViewData["Title"] = "Welcome";
}

<!-- Glassmorphism Welcome Page -->
<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="glass-card text-center p-5">
        <h1 class="display-4 mb-4">LEB.EATS</h1>
        <p class="lead mb-4">Delicious food delivered to your doorstep.</p>

        <!-- Updated Navigation Buttons -->
        <div class="mt-4">
            <a asp-controller="Account" asp-action="LoginSignup" class="btn btn-lg btn-primary mx-2">Login or Signup</a>
        </div>
    </div>
</div>

<!-- Inline CSS for Glassmorphism and Background Image -->
<style>
    body {
        background: url('/IMAGE/front-view-veggie-burger-with-black-buns-cutting-board-with-copy-space.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Poppins', sans-serif;
        margin: 0;
        height: 100vh;
        overflow: hidden;
    }

    .vh-100 {
        height: 100vh;
    }

    .glass-card {
        width: 400px;
        background: rgba(255, 255, 255, 0.13);
        backdrop-filter: blur(10px);
        border-radius: 10px;
        border: 2px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 0 40px rgba(8, 7, 16, 0.6);
        color: #fff;
        padding: 30px;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 10px 20px;
        font-size: 18px;
        font-weight: 600;
        border-radius: 5px;
        cursor: pointer;
        transition: background 0.3s;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .display-4 {
        font-size: 2.5rem;
        font-weight: 500;
        color: #fff;
    }

    .lead {
        font-size: 1.25rem;
        font-weight: 300;
        color: #e5e5e5;
    }
</style>
